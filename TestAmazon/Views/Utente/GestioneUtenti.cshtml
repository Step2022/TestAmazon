@model IEnumerable<TestAmazon.Models.Utente>

@{
    ViewBag.Title = "GestioneUtenti";
}

<h2>Gestione Utenti</h2>



<p style="color:red">@ViewBag.Success</p>
<table id="gestione">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayName("Ruolo")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            ********
            @*@Html.DisplayFor(modelItem => item.Password)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ruolo.Nome_ruolo)
        </td>
        <td>
            @*   @Html.ActionLink("Edit", "Edit", new { id = item.Id_Utente }) |*@
            @Html.ActionLink("Dettaglio", "Details", new { id = item.Id_Utente } ,
            new { @class = "btn btn-warning"})
            @Html.ActionLink("Elimina", "Delete", new { id = item.Id_Utente },
            new { @class = "btn btn-warning",
            onclick = string.Format("return confirm('WARNING: Procedere con l eliminazione di {0} {1}?');", item.Nome,item.Cognome) })

        </td>
    </tr>
}

</table>
<style>
    #gestione {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-top: 100px;
    }

        #gestione td, #gestione th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #gestione tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #gestione tr:hover {
            background-color: #ddd;
        }

        #gestione th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: darkseagreen;
            color: white;
        }
</style>
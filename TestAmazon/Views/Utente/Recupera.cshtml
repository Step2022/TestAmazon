@model TestAmazon.Models.Utente



<div align="left" style="display: inline">
    <button class="btn btn_personal searchbarbtn" onclick="history.back()"><i class="fa-solid fa-arrow-left fa-xl"></i></button>
</div>

<div class="form">
    <form method="post" action="Recupera">
        <h4>Imposta la nuova Password</h4><br />
        @{
        if(ViewBag.Rec !=null){
        <p style="color:red"> @ViewBag.Rec.ToString()</p>
        }
        }
        <label>Inserisci Email</label><br />
        <input class="inp" type="text" name="Email" /><br />
        <label>Inserisci Password Nuova</label><br />
        <div class="occhio">
            <input class="inp" type="password" name="Password" /> <button class="btnp" type="button" onclick="if (Password.type == 'text') Password.type = 'password';
  else Password.type = 'text';">
                <i class="fa-solid fa-eye"></i>
            </button>
        </div><br />
        <label>Conferma Password Nuova</label><br />
        <div class="occhio">
            <input class="inp" type="password" name="pass" /> <button class="btnp" type="button" onclick="if (pass.type == 'text') pass.type = 'password';
  else pass.type = 'text';">
                <i class="fa-solid fa-eye"></i>
            </button>
        </div><br />
        <input class="sub " type="submit" value="Continua">
    </form>







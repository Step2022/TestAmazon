
<!DOCTYPE html>
<html>
<head>
    <script src="https://kit.fontawesome.com/ea32530151.js" crossorigin="anonymous"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @using TestAmazon.Utility

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/homepage.css" rel="stylesheet" />
    <script src="~/Scripts/js/homepage.js"></script>

    @{

        long IdUtente = 0;


        if (Session["IdUtente"] != null && RegularExp.IsInt(Session["IdUtente"].ToString()))
        {
            IdUtente = int.Parse(Session["IdUtente"].ToString());
        }

    }

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top colornavBar">
        <div class="row">
            <div class="col-lg-3" style="float:left;">
                <a href="/"><img src="~/IMGS/logo.png" style="max-height:50px" /></a>
            </div>
            @if (@Session["Utente"] != null)
            {


                <div style="float: right; margin-top: 15px; min-width: 30px;margin-right:30px ">
                    @Html.ActionLink(" ", "Logout", "Utente", "", new { @class = "fa-solid fa-right-from-bracket fa-xl", style = "color:white;margin-top:10px;" })
                </div>
                <div style="float: right; margin-top: 15px; min-width: 30px; margin-right: 30px">
                    <a href="../../Carrello/CarrelloUtente" style="color: white; margin-top: 10px"><i class="fa-solid fa-cart-shopping fa-xl" style="margin-top:10px"></i></a>
                </div>
                <div style="float: right; margin-top: 10px; font-size: 13px; min-width: 50px; margin-right: 30px;">
                    <label style="color:white">@Session["Utente"].ToString()</label>
                    <select name="select_user" id="select_user" style="min-width:50px;min-height:30px;border-radius:20px 0px 0px 20px" onchange="OnChangeDDLUser(@Session["IdUtente"].ToString())">
                        <option value="0"></option>
                        <option value="1">Lista Preferiti ⭐</option>
                        <option value="2">Carrello🛒</option>
                    </select>
                    <i class="fa-solid fa-user fa-xl colornavBar" style="background-color:white;padding:14px;border:hidden;border-radius:0px 20px 20px 0px;"></i>
                </div>
                if (@Session["Ruolo"].ToString() == "admin")
                {
                    <div  style="float:right;margin-top:10px;color:white;margin-right:30px">
                        @Html.ActionLink("Gestione Utenti", "GestioneUtenti", "Utente")
                    </div>
                }
            }
            else
            {
                <div style="float: right; margin-top: 10px; min-width: 10px; margin-right: 40px">
                    @*<label style="color:white">Register</label>*@
                    @Html.ActionLink("Register ", "SignUp", "Utente", "", new { style = "color:white" })
                    @Html.ActionLink(" ", "SignUp", "Utente", "", new { @class = "fa-solid fa-user-plus fa-xl", style = "color:white" })
                </div>
                <div style="float: right; margin-top: 10px; min-width: 10px; margin-right: 20px">
                    @*<label style="color:white">Login</label>*@
                    @Html.ActionLink("Login ", "Login", "Utente", "", new { style = "color:white" })
                    @Html.ActionLink(" ", "Login", "Utente", "", new { @class = "fa-solid fa-arrow-right-to-bracket fa-xl", style = "color:white" })
                </div>
            }

        </div>

    </div>
    <div class="container body-content color1">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>

</script>